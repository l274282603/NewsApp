<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/welcomeimg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash0"/>

    <TextView
        android:id="@+id/miantext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:textSize="46sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="News"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/miantext"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:textColor="@color/alpha_70_white"
        android:text="一个可以浏览新闻的app"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ban_shadow"/>


</RelativeLayout>
